<script>
  // ============================================================================
  // CONFIGURATION
  // ============================================================================
  const APPS_SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbzYPoKRcDDyNhPU8PAITIF-jNxveBeRnv_KkIkPoMRCrHojA5sRmdMcFjtSdrVqmZuN/exec';
  const RSVP_DEADLINE = new Date('2026-02-28T23:59:59');

  function isRsvpClosed(): boolean {
    return new Date() > RSVP_DEADLINE;
  }

  interface ExistingResponse {
    timestamp: string;
    attending: string;
    guests: string;
    dietary: string;
    message: string;
  }

  interface GuestData {
    name: string;
    max_guests: number;
    message: string;
    existing?: ExistingResponse;
  }

  let currentCode: string = '';

  // Validate code via Apps Script API
  async function validateCode(): Promise<void> {
    const codeInput = document.getElementById('guest-code') as HTMLInputElement;
    const errorEl = document.getElementById('code-error');
    const loadingEl = document.getElementById('loading-message');
    const validateBtn = document.getElementById('validate-btn') as HTMLButtonElement;

    const code = codeInput.value.trim().toUpperCase();

    if (!code) {
      errorEl?.classList.remove('hidden');
      return;
    }

    // Show loading state
    errorEl?.classList.add('hidden');
    loadingEl?.classList.remove('hidden');
    if (validateBtn) validateBtn.disabled = true;

    try {
      // Call Apps Script API with client ID for rate limiting
      const clientId = localStorage.getItem('rsvp_client_id') || crypto.randomUUID();
      localStorage.setItem('rsvp_client_id', clientId);
      const response = await fetch(`${APPS_SCRIPT_URL}?code=${encodeURIComponent(code)}&clientId=${encodeURIComponent(clientId)}`);
      const data = await response.json();

      let guest: GuestData | null = null;
      if (data.success && data.guest) {
        guest = data.guest;
      }

      loadingEl?.classList.add('hidden');
      if (validateBtn) validateBtn.disabled = false;

      if (guest) {
        currentCode = code;
        showPersonalizedForm(code, guest);
      } else {
        errorEl?.classList.remove('hidden');
        codeInput.focus();
      }

    } catch (error) {
      console.error('Error validating code:', error);
      loadingEl?.classList.add('hidden');
      errorEl?.classList.remove('hidden');
      if (validateBtn) validateBtn.disabled = false;
    }
  }

  // Show personalized form
  function showPersonalizedForm(code: string, guest: GuestData): void {
    const codeStep = document.getElementById('code-step');
    const formStep = document.getElementById('form-step');
    const form = document.getElementById('rsvp-form') as HTMLFormElement;

    // Hide code step, show form step
    codeStep?.classList.add('hidden');
    formStep?.classList.remove('hidden');

    // Set personalized content
    const guestNameEl = document.getElementById('guest-name');
    const customMessageEl = document.getElementById('custom-message');
    const formCodeEl = document.getElementById('form-code') as HTMLInputElement;
    const formNameEl = document.getElementById('form-name') as HTMLInputElement;
    const lastResponseEl = document.getElementById('last-response');
    const lastResponseDateEl = document.getElementById('last-response-date');

    if (guestNameEl) guestNameEl.textContent = guest.name;
    if (customMessageEl) customMessageEl.textContent = guest.message;
    if (formCodeEl) formCodeEl.value = code;
    if (formNameEl) formNameEl.value = guest.name;

    // Populate guest count dropdown
    const guestCountSelect = document.getElementById('guest-count') as HTMLSelectElement;
    guestCountSelect.innerHTML = '';
    for (let i = 1; i <= guest.max_guests; i++) {
      const option = document.createElement('option');
      option.value = i.toString();
      option.textContent = i.toString();
      guestCountSelect.appendChild(option);
    }

    // Prepopulate with existing response if available
    if (guest.existing) {
      const existing = guest.existing;

      // Show last response date
      if (lastResponseEl && lastResponseDateEl && existing.timestamp) {
        const date = new Date(existing.timestamp);
        lastResponseDateEl.textContent = date.toLocaleDateString();
        lastResponseEl.classList.remove('hidden');
      }

      // Prepopulate attending
      if (existing.attending) {
        const attendingRadio = form?.querySelector(`input[name="attending"][value="${existing.attending}"]`) as HTMLInputElement;
        if (attendingRadio) attendingRadio.checked = true;
      }

      // Prepopulate guests
      if (existing.guests && guestCountSelect) {
        guestCountSelect.value = existing.guests;
      }

      // Prepopulate dietary
      const dietaryInput = document.getElementById('dietary') as HTMLInputElement;
      if (dietaryInput && existing.dietary) {
        dietaryInput.value = existing.dietary;
      }

      // Prepopulate message
      const messageInput = document.getElementById('message') as HTMLTextAreaElement;
      if (messageInput && existing.message) {
        messageInput.value = existing.message;
      }

      // Change button text to "Update RSVP"
      const submitBtn = form?.querySelector('button[type="submit"]');
      if (submitBtn) {
        const enSpan = submitBtn.querySelector('[data-lang-en]');
        const zhSpan = submitBtn.querySelector('[data-lang-zh]');
        if (enSpan) enSpan.textContent = 'Update RSVP';
        if (zhSpan) zhSpan.textContent = 'Êõ¥Êñ∞ÂõûÂ§ç';
      }
    }

  }

  // Show thank you after submission
  function showThankYou(): void {
    const formStep = document.getElementById('form-step');
    const thankyouStep = document.getElementById('thankyou-step');

    formStep?.classList.add('hidden');
    thankyouStep?.classList.remove('hidden');
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    const closedStep = document.getElementById('closed-step');
    const codeStep = document.getElementById('code-step');

    // Check if RSVP is closed
    if (isRsvpClosed()) {
      closedStep?.classList.remove('hidden');
      codeStep?.classList.add('hidden');
      return; // Don't initialize form handlers
    } else {
      closedStep?.classList.add('hidden');
      codeStep?.classList.remove('hidden');
    }

    // Validate button click
    const validateBtn = document.getElementById('validate-btn');
    validateBtn?.addEventListener('click', () => validateCode());

    // Enter key on code input
    const codeInput = document.getElementById('guest-code');
    codeInput?.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        validateCode();
      }
    });

    // Form submission - submit via fetch POST
    const form = document.getElementById('rsvp-form') as HTMLFormElement;
    const formError = document.getElementById('form-error');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      formError?.classList.add('hidden');

      // Validate required fields
      const attending = form.querySelector('input[name="attending"]:checked');
      const guests = (form.querySelector('#guest-count') as HTMLSelectElement)?.value;

      if (!attending || !guests) {
        formError?.classList.remove('hidden');
        return;
      }

      const formData = new FormData(form);
      const params = new URLSearchParams();
      formData.forEach((value, key) => params.append(key, value.toString()));

      try {
        const response = await fetch(APPS_SCRIPT_URL, {
          method: 'POST',
          body: params
        });
        const data = await response.json();

        if (data.success) {
          showThankYou();
        } else {
          formError?.classList.remove('hidden');
        }
      } catch (error) {
        console.error('Submission error:', error);
        formError?.classList.remove('hidden');
      }
    });
  });
</script>
