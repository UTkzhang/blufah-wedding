  .rsvp-wrapper {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 0;
    background-color: var(--color-white);
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    margin: var(--space-8) 0;
  }

  /* Decorative Side */
