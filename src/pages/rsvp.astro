    color: var(--color-sage);
    pointer-events: none;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  /* Attendance Cards */
  .form-section {
    margin: var(--space-4) 0;
  }

  .section-label {
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--space-4);
  }

  .attendance-cards {
    display: grid;
