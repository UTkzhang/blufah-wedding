---
import en from '../i18n/en.json';
import zh from '../i18n/zh.json';
---

<section class="hero" id="home">
  <div class="hero-bg parallax-bg" style="background-image: url('/images/hero.jpg');"></div>
  <div class="hero-overlay"></div>

  <div class="hero-content">
    <p class="hero-intro animate-fade-in" style="animation-delay: 0.2s;">
      <span data-lang-en>We're getting married!</span>
      <span data-lang-zh style="display: none;">我们要结婚啦！</span>
    </p>

    <h1 class="hero-names animate-fade-in" style="animation-delay: 0.4s;">
      <span class="hero-name">
        <span data-lang-en>{en.hero.groom}</span>
        <span data-lang-zh style="display: none;">{zh.hero.groom}</span>
      </span>
      <span class="hero-and">&</span>
      <span class="hero-name">
        <span data-lang-en>{en.hero.bride}</span>
        <span data-lang-zh style="display: none;">{zh.hero.bride}</span>
      </span>
    </h1>

    <div class="hero-divider animate-fade-in" style="animation-delay: 0.6s;">
      <span class="divider-line"></span>
      <span class="divider-icon">♡</span>
      <span class="divider-line"></span>
    </div>

    <p class="hero-date animate-fade-in" style="animation-delay: 0.8s;">
      <span data-lang-en>{en.hero.date}</span>
      <span data-lang-zh style="display: none;">{zh.hero.date}</span>
    </p>

    <p class="hero-venue animate-fade-in" style="animation-delay: 1s;">
      <span data-lang-en>{en.hero.venue}</span>
      <span data-lang-zh style="display: none;">{zh.hero.venue}</span>
      <br />
      <span class="hero-location" data-lang-en>{en.hero.location}</span>
      <span class="hero-location" data-lang-zh style="display: none;">{zh.hero.location}</span>
    </p>

    <div class="hero-actions animate-fade-in" style="animation-delay: 1.2s;">
      <a href="/rsvp" class="btn btn-primary">
        <span data-lang-en>{en.hero.cta}</span>
        <span data-lang-zh style="display: none;">{zh.hero.cta}</span>
      </a>
      <a href="/story" class="btn btn-outline">
        <span data-lang-en>Our Story</span>
        <span data-lang-zh style="display: none;">我们的故事</span>
      </a>
    </div>
  </div>

</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: -10%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.85) 0%,
      rgba(250, 249, 246, 0.85) 50%,
      rgba(255, 255, 255, 0.85) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    padding: var(--space-8);
  }

  .hero-intro {
    font-family: var(--font-serif);
    font-size: var(--text-lg);
    font-style: italic;
    color: var(--color-gray);
    margin-bottom: var(--space-6);
    letter-spacing: 0.05em;
  }

  .hero-names {
    font-family: var(--font-serif);
    font-size: var(--text-7xl);
    font-weight: 300;
    color: var(--color-charcoal);
    line-height: 1.1;
    margin-bottom: var(--space-6);
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
  }

  .hero-name {
    display: inline-block;
  }

  .hero-and {
    color: var(--color-sage);
    font-weight: 300;
    font-style: italic;
  }

  .hero-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .divider-line {
    width: 80px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-sage), transparent);
  }

  .divider-icon {
    color: var(--color-sage);
    font-size: var(--text-lg);
  }

  .hero-date {
    font-family: var(--font-serif);
    font-size: var(--text-3xl);
    font-weight: 400;
    color: var(--color-charcoal);
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
  }

  .hero-venue {
    font-family: var(--font-sans);
    font-size: var(--text-lg);
    color: var(--color-gray);
    margin-bottom: var(--space-8);
    line-height: 1.8;
  }

  .hero-location {
    font-size: var(--text-base);
  }

  .hero-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-bg {
      background-position: 60% center;
    }

    .hero-names {
      font-size: var(--text-5xl);
      flex-direction: column;
      gap: var(--space-2);
    }

    .hero-and {
      font-size: var(--text-3xl);
    }

    .hero-date {
      font-size: var(--text-2xl);
    }

    .divider-line {
      width: 50px;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .hero-names {
      font-size: var(--text-4xl);
    }

    .hero-content {
      padding: var(--space-4);
    }
  }
</style>

<script>
  // Parallax effect on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const heroBg = document.querySelector('.hero-bg') as HTMLElement;

    if (heroBg) {
      window.addEventListener('scroll', () => {
        const scrolled = window.scrollY;
        const rate = scrolled * 0.3;
        heroBg.style.transform = `translateY(${rate}px)`;
      });
    }
  });
</script>
